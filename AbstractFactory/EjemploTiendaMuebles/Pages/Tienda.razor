
@page "/tienda"
@using EjemploTiendaMuebles.Interfaces
@using EjemploTiendaMuebles.TiposFabricas

<h3>Simulador de Tienda de Muebles</h3>

<button @onclick="MostrarInformacion">Mostrar Información</button>

<p>@informacion</p>

@code {
    private string informacion = "";

    private void MostrarInformacion()
    {
        // ConfiguradorTiendaMuebles
        ConfiguradorTiendaMuebles configurador = new ConfiguradorTiendaMuebles();
        configurador.Inicializar();
        informacion += "Información de ConfiguradorTiendaMuebles:\n";
        // Puedes agregar más lógica aquí si hay información específica que deseas mostrar

        // SimuladorTiendaMuebles
        IMueblesFactory fabrica = new FabricaMueblesModernos(); // o FabricaMueblesVictorianos, según tu configuración
        SimuladorTiendaMuebles simulador = new SimuladorTiendaMuebles(fabrica);
        simulador.CrearMuebles();
        informacion += "Información de SimuladorTiendaMuebles:\n";
        // Puedes agregar más lógica aquí si hay información específica que deseas mostrar
    }
}
